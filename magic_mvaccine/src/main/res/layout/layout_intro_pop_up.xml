<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lipu_intro_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/Magic_mVaccine_module_name"
        android:src="@drawable/vguard_popup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/lipu_pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:max="100"
        android:progressDrawable="@drawable/custom_progressbar"
        android:visibility="gone"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/lipu_intro_iv"
        app:layout_constraintLeft_toLeftOf="@+id/lipu_intro_iv"
        app:layout_constraintRight_toRightOf="@+id/lipu_intro_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>