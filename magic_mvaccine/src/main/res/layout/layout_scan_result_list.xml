<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/lsrl_malware_iv"
        android:layout_marginLeft="20dp"
        android:contentDescription="StringValue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/black"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/lsrl_malware_name_tv"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:lines="1"
        android:text="tmp"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="28dp"
        app:layout_constraintTop_toTopOf="@id/lsrl_malware_iv"
        app:layout_constraintLeft_toRightOf="@+id/lsrl_malware_iv"
        app:layout_constraintRight_toRightOf="@id/lsrl_del_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lsrl_malware_path_tv"
        android:textSize="12sp"
        android:textColor="#929292"
        android:ellipsize="end"
        android:lines="2"
        android:text="tmp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/lsrl_malware_iv"
        app:layout_constraintTop_toBottomOf="@+id/lsrl_malware_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/lsrl_malware_iv"
        app:layout_constraintRight_toRightOf="@id/lsrl_del_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/lsrl_del_btn"
        android:src="@drawable/selector_mw_delete_btn"
        android:contentDescription="StringValue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20dp"
        android:layout_width="28dp"
        android:layout_height="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>