<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numFourLinesKeyboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="visible"
    android:focusable="true">


    <!-- 키패드 -->

    <LinearLayout
        android:id="@+id/numFourLinesKeypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/keyPadBg"
        android:orientation="vertical"
        android:weightSum="4"
        android:splitMotionEvents="false">

        <!-- 첫 째줄 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />


            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_four_lines_np11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_no_txt_bg_selector"
                android:scaleType="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <ImageButton
                android:id="@+id/key_four_lines_replace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_btn_shift_bg_selector"
                android:contentDescription="재배열"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_no_replace" />

            <ImageButton
                android:id="@+id/key_four_lines_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="지움"
                android:layout_marginRight="2dp"
                android:background="@drawable/ds_btn_shift_bg_selector"
                android:scaleType="centerInside"
                android:src="@drawable/ds_btn_back" />

            <ImageButton
                android:id="@+id/key_four_lines_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ds_btn_ok_bg_selector"
                android:contentDescription="완료"
                android:padding="0dp"
                android:scaleType="center"
                android:src="@drawable/ds_btn_ok" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>