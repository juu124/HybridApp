<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numWidgetKeyboardLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="visible">


    <!-- 키패드 -->

    <LinearLayout
        android:id="@+id/numwidgetkeypad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/keyPadBg"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <!-- 첫 째줄 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <ImageButton
                android:id="@+id/key_widget_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:contentDescription="지움"
                android:src="@drawable/num_del" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />


            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_widget_np11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:scaleType="center" />


            <ImageButton
                android:id="@+id/num_widget_key_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/ds_widget_bg_selector"
                android:contentDescription="확인"
                android:scaleType="center"
                android:src="@drawable/num_ok" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>