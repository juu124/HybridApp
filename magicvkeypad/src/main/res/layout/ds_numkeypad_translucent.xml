<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numTranslucentKeyboardLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="visible">

    <!-- 키패드 -->

    <LinearLayout
        android:id="@+id/numtranslucentkeypad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <!-- 첫 째줄 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:layout_weight="1"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_1" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:layout_weight="1"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_2" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_3" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np4"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:layout_weight="1"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_4" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np5"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_5" />

            <ImageButton
                android:id="@+id/key_translucent_delete"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:contentDescription="지움"
                android:src="@drawable/num_white_del" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:splitMotionEvents="false">

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np6"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_6" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np7"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_7" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np8"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_8" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np9"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_9" />

            <com.dreamsecurity.magicvkeypad.MagicVKeypadButton
                android:id="@+id/key_translucent_np0"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:scaleType="center"
                android:src="@drawable/num_white_0" />

            <ImageButton
                android:id="@+id/num_translucent_key_ok"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/ds_translucent_bg_selector"
                android:contentDescription="확인"
                android:padding="0dp"
                android:scaleType="center"
                android:src="@drawable/num_white_cls" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>