<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="#c6c6c6" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>

    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>

    </item>


    <!--    <item android:state_pressed="true" android:drawable="@drawable/gray" />-->
    <!--    <item android:state_pressed="false" android:drawable="@drawable/white" />-->
</selector>