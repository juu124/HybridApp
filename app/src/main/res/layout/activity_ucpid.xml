<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgcolor"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_cert_index"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="인증서 정보"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shrinkColumns="1,3,5,7,9,11"
                android:stretchColumns="2,4,6,8,10"
                android:background="@drawable/round_corner">

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:text="이름" />

                    <TextView
                        android:id="@+id/txt_cert_info_name"
                        android:layout_marginLeft="15dp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:background="#ffffff"
                    android:layout_height="1dp" />

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:text="발급자" />

                    <TextView
                        android:id="@+id/txt_cert_info_issur"
                        android:layout_marginLeft="15dp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:background="#ffffff"
                    android:layout_height="1dp" />

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:text="용도" />

                    <TextView
                        android:id="@+id/txt_cert_info_objective"
                        android:layout_marginLeft="15dp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:background="#ffffff"
                    android:layout_height="1dp" />

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:text="목적" />

                    <TextView
                        android:id="@+id/txt_cert_info_purpose"
                        android:layout_marginLeft="15dp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:background="#ffffff"
                    android:layout_height="1dp" />

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:text="DN" />

                    <TextView
                        android:id="@+id/txt_cert_info_dn"
                        android:layout_marginLeft="15dp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:background="#ffffff"
                    android:layout_height="1dp" />

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="유효기간(From)" />

                    <TextView
                        android:id="@+id/txt_cert_info_from"
                        android:layout_marginLeft="15dp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:background="#ffffff"
                    android:layout_height="1dp" />

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:text="유효기간(To)" />

                    <TextView
                        android:id="@+id/txt_cert_info_to"
                        android:layout_marginLeft="15dp" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:background="#ffffff"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp" />

            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:background="#ffffff"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/ovalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="발급기관:" />

            <View
                android:layout_width="fill_parent"
                android:background="#ffffff"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/useragreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="샘플 약관 전문 내용입니다. " />

            <View
                android:layout_width="fill_parent"
                android:background="#ffffff"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정보 공개 범위 선택" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실명"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/national"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="국적"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주민번호"
                    android:checked="true" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="인증서 비밀번호(sample 인증서 비밀번호:qwer1234)"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

                <EditText
                    android:id="@+id/cert_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_req_ucpid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAKE REQUEST INFO." />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
