<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모드 설정" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="146dp"
            android:layout_height="34dp"
            android:layout_weight="100"
            android:checked="true"
            android:text="Single" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="174dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Multi" />
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRequestSignedInfo"
        android:text="SignedInfo 요청" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignedInfo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signedInfoVal"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@color/black"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btn_xml_certList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickCertList"
        android:text="인증서 목록" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignedData"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signedDataVal"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@color/black"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btn_xml_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickSubmit"
        android:text="전송" />
</LinearLayout>