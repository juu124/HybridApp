<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_user_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:scaleType="centerCrop" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebeb"
        android:gravity="center_vertical">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dialog_user_id_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="id"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_user_id_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                tools:text="id" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dialog_user_email_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.1"
                android:background="#ffffff"
                android:gravity="center"
                android:text="email"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_user_email_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:layout_weight="0.5"
                android:background="#ffffff"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                tools:text="email" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dialog_user_name_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.15"
                android:background="#ffffff"
                android:gravity="center"
                android:text="name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_user_first_name_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.15"
                android:background="#ffffff"
                android:gravity="center"
                android:text="first"
                android:textColor="#c2c2c2" />

            <TextView
                android:id="@+id/item_user_first_name_tv"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:maxLines="1"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                tools:text="first" />

            <TextView
                android:id="@+id/dialog_user_last_name_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:layout_weight="0.15"
                android:background="#ffffff"
                android:gravity="center"
                android:text="last"
                android:textColor="#c2c2c2" />

            <TextView
                android:id="@+id/item_user_last_name_tv"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                tools:text="last" />

        </TableRow>

    </TableLayout>

</LinearLayout>