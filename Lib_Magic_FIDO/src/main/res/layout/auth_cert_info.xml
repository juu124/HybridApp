<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cert_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/border_line_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_small_auth"
                android:layout_width="48dp"
                android:layout_height="54dp"
                android:src="@drawable/certi"></ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/general_01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="인증서(범용개인)"
                android:textColor="#5c6781"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/certDN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="홍길동"
                android:fontFamily="@font/notosans_medium"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/issuerDN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="발급자 : 은행기관"
                android:textColor="#5c6781"
                android:textSize="11dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/certType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:text="용도 범용개인"
                android:textColor="#666666"
                android:fontFamily="@font/notosans_regular"
                android:textSize="14dp"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/expireDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="만료일자 0000.00.00"
                android:textColor="#666666"
                android:layout_marginBottom="15dp"
                android:textSize="14dp"
                android:lineSpacingExtra="0dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_regular" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>