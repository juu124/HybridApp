<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:patternview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4f9ff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_patternview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:text="@string/pt_t_verify"
            android:textColor="#333333"
            android:textSize="26dp"
            android:fontFamily="@font/notosans_regular"
            android:gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textColor="#000000"
            android:textSize="26dp"
            android:fontFamily="@font/notosans_regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp" />

        <TextView
            android:id="@+id/dialog_patternview_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:textColor="#f10010"
            android:textSize="18dp"
            android:visibility="visible"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:fontFamily="@font/notosans_regular" />

        <com.dreamsecurity.patternview.PatternView
            android:id="@+id/dialog_patternview_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            patternview:gridColumns="3"
            patternview:gridRows="3"
            patternview:pathColor="#0078d7"
            android:layout_above="@id/cancel_btn_box"
            android:layout_marginBottom="180dp"
            patternview:maxSize="350dp" />

        <Button
            android:id="@+id/reset_callback_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:text="로그인 방식 선택"
            android:fontFamily="@font/notosans_regular"
            android:textColor="#333333"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />

        <!--        <Button-->
        <!--            android:id="@+id/reset_callback_btn"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="64dp"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:background="#62656b"-->
        <!--            android:text="취소"-->
        <!--            android:fontFamily="@font/notosans_regular"-->
        <!--            android:textColor="#ffffff"-->
        <!--            android:textSize="18dp"-->
        <!--            />-->
        <RelativeLayout
            android:id="@+id/cancel_btn_box"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:background="#62656b">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="취소"
                android:fontFamily="@font/notosans_regular"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:gravity="center" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:background="@null" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@null" />
        </RelativeLayout>

        <!--<TextView-->
        <!--android:id="@+id/temp_background"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_above="@+id/reset_callback_btn"-->
        <!--android:background="#00000000"-->
        <!--android:visibility="gone" />-->

    </RelativeLayout>


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>